# =============================================================================
# FUNDING ARBITRAGE BOT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Do NOT commit .env file with real credentials to version control

# =============================================================================
# EXCHANGE API CREDENTIALS
# =============================================================================
# Each exchange requires separate API keys with trading permissions enabled

# Binance Spot
BINANCE_API_KEY=
BINANCE_SECRET_KEY=
# Required permissions: Spot Trading, Read Info

# Binance Perpetual Futures
BINANCE_PERPETUAL_API_KEY=
BINANCE_PERPETUAL_SECRET_KEY=
# Required permissions: Futures Trading, Read Info

# Bybit Spot
BYBIT_API_KEY=
BYBIT_SECRET_KEY=
# Required permissions: Spot Trading, Read Info

# Bybit Perpetual
BYBIT_PERPETUAL_API_KEY=
BYBIT_PERPETUAL_SECRET_KEY=
# Required permissions: Derivatives Trading, Read Info

# OKX Spot
OKX_API_KEY=
OKX_SECRET_KEY=
OKX_PASSPHRASE=
# Required permissions: Trading, Read Info

# OKX Perpetual
OKX_PERPETUAL_API_KEY=
OKX_PERPETUAL_SECRET_KEY=
OKX_PERPETUAL_PASSPHRASE=
# Required permissions: Futures Trading, Read Info

# Gate.io Spot
GATE_IO_API_KEY=
GATE_IO_SECRET_KEY=
# Required permissions: Spot Trading, Read Info

# Gate.io Perpetual
GATE_IO_PERPETUAL_API_KEY=
GATE_IO_PERPETUAL_SECRET_KEY=
# Required permissions: Futures Trading, Read Info

# KuCoin Spot
KUCOIN_API_KEY=
KUCOIN_SECRET_KEY=
KUCOIN_PASSPHRASE=
# Required permissions: General, Trade

# KuCoin Perpetual
KUCOIN_PERPETUAL_API_KEY=
KUCOIN_PERPETUAL_SECRET_KEY=
KUCOIN_PERPETUAL_PASSPHRASE=
# Required permissions: Futures Trading

# =============================================================================
# RISK MANAGEMENT PARAMETERS
# =============================================================================

# Minimum funding rate spread to enter positions (annualized)
# Example: 0.0005 = 0.05% minimum spread required
MIN_FUNDING_RATE_PROFITABILITY=0.0005

# Maximum position size per exchange in quote currency (USDT)
# Start with smaller amounts for testing
MAX_POSITION_SIZE_QUOTE=100

# Default leverage for perpetual futures (1-20x depending on exchange)
# Use 1 for no leverage, higher values increase risk
DEFAULT_LEVERAGE=3

# Maximum percentage of total portfolio in any single asset
# 0.2 = 20% maximum concentration
MAX_POSITION_CONCENTRATION=0.2

# Stop loss percentage for individual positions
# 0.02 = 2% stop loss
STOP_LOSS_PERCENTAGE=0.02

# Maximum number of simultaneous positions
MAX_CONCURRENT_POSITIONS=5

# =============================================================================
# STRATEGY TIMING PARAMETERS
# =============================================================================

# How often to check funding rates (in seconds)
# 300 = check every 5 minutes
FUNDING_RATE_CHECK_INTERVAL=300

# How often to rebalance positions (in seconds)
# 3600 = rebalance every hour
POSITION_REBALANCE_INTERVAL=3600

# Order execution timeout (in seconds)
ORDER_TIMEOUT=30

# Maximum age of funding rate data before considered stale (in seconds)
# 900 = 15 minutes
MAX_FUNDING_RATE_AGE=900

# =============================================================================
# EXCHANGE SPECIFIC SETTINGS
# =============================================================================

# Binance testnet mode (true/false)
BINANCE_TESTNET=false

# Bybit testnet mode (true/false)
BYBIT_TESTNET=false

# OKX demo trading mode (true/false)
OKX_DEMO=false

# Default trading fees (as decimal, e.g., 0.001 = 0.1%)
# Used for profitability calculations when exchange fees not available
DEFAULT_MAKER_FEE=0.001
DEFAULT_TAKER_FEE=0.001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL connection details (for Docker setup)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Health check server port
HEALTH_PORT=5723

# Enable performance metrics collection (true/false)
ENABLE_METRICS=true

# Metrics collection interval (in seconds)
METRICS_INTERVAL=60

# =============================================================================
# NETWORK AND PROXY SETTINGS
# =============================================================================

# HTTP proxy for exchange connections (optional)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080

# Connection timeout (in seconds)
CONNECTION_TIMEOUT=10

# Maximum number of API requests per second per exchange
API_RATE_LIMIT=10

# =============================================================================
# PAPER TRADING MODE
# =============================================================================

# Enable paper trading mode (true/false)
# When enabled, no real orders are placed
PAPER_TRADING_MODE=false

# Starting balance for paper trading (in USDT)
PAPER_TRADING_BALANCE=10000

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Telegram bot token and chat ID for notifications (optional)
# TELEGRAM_BOT_TOKEN=your_bot_token
# TELEGRAM_CHAT_ID=your_chat_id

# Discord webhook URL for notifications (optional)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Email notifications (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=your_email@gmail.com

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Enable experimental features (true/false)
ENABLE_EXPERIMENTAL_FEATURES=false

# Custom configuration file path (optional)
# CUSTOM_CONFIG_PATH=/path/to/custom/config.yml

# Debug mode - enables additional logging and validation (true/false)
DEBUG_MODE=false